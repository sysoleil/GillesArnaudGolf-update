            {# {% if is_granted("ROLE_CE") %}
            <div>
                {{ form_label(reservationForm.price) }}<br>
                {{ form_widget(reservationForm.price, {'attr': {'class': 'inputPrice'}}) }}
                {{ form_errors(reservationForm.price) }}
            </div>
            {# {% endif %} #}
            <div>
                {{ form_label(reservationForm.hourStart) }}<br>
                {{ form_widget(reservationForm.hourStart, {'attr': {'class': 'input_hour'}}) }}
                {{ form_errors(reservationForm.hourStart)}}
            </div>

            <div>
                {{ form_label(reservationForm.hourEnd) }}
                {{ form_widget(reservationForm.hourEnd, {'attr': {'class': 'input_hour'}}) }}
                {{ form_errors(reservationForm.hourEnd) }}
            </div>
            <div> {{ form_label(reservationForm.submit) }}
                {{ form_widget(reservationForm.submit, {'attr': {'class':'inputSubmit'}}) }}</div>

            {{ form_end(reservationForm) }}
        </div>
        <button class="backCenter"><a href="{{ path('reervation') }}">Retour à l'accueil</a></button>
    {% endblock %}