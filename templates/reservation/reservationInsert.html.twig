            {{ form_start(reservationForm) }}

            <div> {{ form_label(reservationForm.dateCourse) }}
                {{ form_widget(reservationForm.dateCourse, {'attr': {'class':'input_date'}}) }}
                {{ form_errors(reservationForm.dateCourse) }}
            </div>
