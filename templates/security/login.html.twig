{% extends 'commons/base.html.twig' %}
{% block title %}Connection{% endblock %}
{% block body %}
    <main class="courseMain">
    <meta name="keywords" content="golf, professeur, cours, coach, gilles, arnaud, bordeaux, médoc, gironde, sport"/>
        {% include 'commons/_headerLittle.html.twig' %}

    <a class="userButtonInsert" href="{{ path('app_register') }}">Créer un compte</a>
            <form class="tableBigCenter" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="">
                                 Vous êtes connecté en tant que {{ app.user.username }},
                       <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
                <div class="userConnect">
                <h1 class="">Veuillez vous connecter</h1>
                </div>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email"
                           id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="" type="submit">Se connecter</button>
            </form>
{% endblock %}