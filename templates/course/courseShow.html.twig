{% extends 'commons/base.html.twig' %}
    {% block title %}voir les cours{% endblock %}
    {% block body %}
        <meta name="keywords" content="golf, professeur, cours, coach, gilles, arnaud, bordeaux, médoc, gironde, sport"/>
        {% include 'commons/_headerLittle.html.twig' %}
        <main class="courseMain">
            <div class="courseShowDisplay courseShowDisplayResponsive">
                <img class="courseShowPhoto courseShowPhotoResponsive" src="{{ asset('upload_directory/' ~ course.photo) }}"
                     alt="{{ course.alt }}" name="{{ course.alt }}">

                <div class="courseShowContainer courseShowContainerResponsive">
                    <h1>{{ course.name }}</h1>
                    <a href="{{ path('course',{'id':course.id}) }}"><p class="courseShowP courseShowPResponsive">
                        {{ course.description }}</p>
                    </a>
                    <p class="courseShowP courseShowPResponsive">
                        {% if is_granted("ROLE_CE") %}
                            Prix: {{ course.priceCe }}€
                            {% if course.ticket > 0 %}
                                ou {{ course.ticket }} ticket(s)
                            {% endif %}
                        {% elseif is_granted("ROLE_SUPER_ADMIN") %}
                            Prix CE: {{ course.priceCe }}€
                            Prix: {{ course.price }}€
                            {% if course.ticket > 0 %}
                                ou {{ course.ticket }} ticket(s)
                            {% endif %}
                        {% else %}
                            Prix: {{ course.price }}€
                            {% if course.ticket > 0 %}
                                ou {{ course.ticket }} ticket(s)
                            {% endif %}
                        {% endif %}
                    </p>
                    <p class="courseShowP courseShowPResponsive">
                        De {{ course.minPerson }} a {{ course.maxPerson }} participants.
                    </p>
                    <p class="courseShowP courseShowPResponsive">
                        Durée: {{ course.duration }} demi-heure(s)
                    </p>
                    <div class="courseShowButton courseShowButtonResponsive">
                        <a class="button buttonResponsive" href="{{ path('calendar_new',{'id':course.id}) }}">Réserver</a>
                    </div>
                    <a class="button buttonLeft buttonResponsive" href="{{ path('home') }}">Retour à l'accueil</a>
                </div>
            </div>
        </main>
    {% endblock %}